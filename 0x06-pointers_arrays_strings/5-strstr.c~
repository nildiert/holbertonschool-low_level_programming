#include <unistd.h>
#include <stdio.h>

/**
 * *_strstr - Function that return the number that coincide two strings
 * @haystack: The character to print
 * @needle: The character to print
 *
 * Return: On success 1.
 * On error, -1 is returned, and errno is set appropriately.
 */
char *_strstr(char *haystack, char *needle)
{
	int i = 0,  j, position;
	int count = 0, sizeofneedle = 0, flag = 0;

	while (*(needle + sizeofneedle))
		sizeofneedle++;
	printf("The size of needle is %d\n", sizeofneedle);

	while (*(needle + i))
	{
		j = 0;
		while (*(haystack + j))
		{
			if (haystack[j] == needle[i])
			{
				count++;
				if (count == 1 && flag != 1)
				{
					printf("The position of haystack is %d and needle is %d\n", j, i);
					position = j;
					flag = 1;
				}

                                printf("haystack %c needle %c : count %d\n", haystack[j], needle[i], count);

				break;
			}
			j++;
		}
		i++;
	}
	printf("count %d and size %d\n", count, sizeofneedle);
	if (count == sizeofneedle)
       		return (&haystack[position]);
	}
		return (NULL);
}
